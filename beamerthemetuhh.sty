\mode<presentation>

% Requirement
\RequirePackage{tikz}

% Settings
\useinnertheme{tuhh}
\useoutertheme{tuhh}
\usecolortheme{tuhh}
\usefonttheme{tuhh}

\geometry{papersize={338.67mm, 190.50mm}}
\setbeamersize{text margin left  = 21.30mm, 
               text margin right = 61.67mm} 

\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{itemize items}{\raisebox{0.4ex}{\footnotesize$\bullet$}}
\setbeamertemplate{itemize/enumerate subbody beginn}{\vspace{2mm}}
\setbeamertemplate{itemize/enumerate subbody end}{\vspace{-2mm}}

\let\tempone\itemize
\let\temptwo\enditemize
\renewenvironment{itemize}{\tempone\addtolength{\itemsep}{1.5mm}}{\temptwo}


\mode<all>