  \renewcommand{\titlepageformat}{branded_titlepage_frame}
  \renewcommand{\titlepagetextformat}{branded_titlepage}
  \renewcommand{\titlepageicon}{#1}
  \renewcommand{\frameicon}{#2}
} 

